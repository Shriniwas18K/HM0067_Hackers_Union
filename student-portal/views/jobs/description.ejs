<%- include('../partials/header') %> 
<%- include('../partials/navbar') %>

<div class="container">
  <div class="job-details-card">
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>
    
    <div class="job-header">
      <h2><%= job.title %></h2>
      <div class="company-name"><%= job.company %></div>
    </div>
    
    <div class="job-info">
      <div class="info-item">
        <span class="label">Location:</span>
        <span class="value"><i class="fa fa-map-marker"></i> <%= job.location %></span>
      </div>
      
      <div class="info-item">
        <span class="label">Salary:</span>
        <span class="value"><i class="fa fa-money"></i> <%= job.salary %></span>
      </div>
      
      <div class="info-item">
        <span class="label">Posted On:</span>
        <span class="value"><i class="fa fa-calendar"></i> <%= job.posted.toLocaleDateString() %></span>
      </div>
    </div>
    
    <div class="job-section">
      <h3>Job Description</h3>
      <div class="section-content">
        <p><%= job.description %></p>
      </div>
    </div>
    
    <div class="job-section">
      <h3>Requirements</h3>
      <div class="section-content">
        <p><%= job.requirements %></p>
      </div>
    </div>
    
    <div class="job-actions">
      <% if (hasApplied) { %>
        <button class="btn already-applied-btn" disabled>
          <i class="fa fa-check-circle"></i> Already Applied
        </button>
      <% } else { %>
        <form action="/jobs/<%= job.id %>/apply" method="POST">
          <button type="submit" class="btn apply-btn">
            <i class="fa fa-paper-plane"></i> Apply Now
          </button>
        </form>
      <% } %>
      <a href="/jobs" class="btn back-btn">
        <i class="fa fa-arrow-left"></i> Back to Jobs
      </a>
    </div>
  </div>
</div>

<style>
  /* Import Google Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@500;600;700&display=swap');
  
  .container {
    max-width: 1000px;
    padding: 30px 20px;
  }
  
  .job-details-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    padding: 30px;
    position: relative;
    overflow: hidden;
    font-family: 'Poppins', sans-serif;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .job-details-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }
  
  .job-details-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    background: linear-gradient(90deg, #3182ce, #63b3ed);
  }
  
  .alert-danger {
    background-color: #fed7d7;
    border-color: #fc8181;
    color: #c53030;
    border-radius: 8px;
    padding: 12px 16px;
    margin-bottom: 24px;
  }
  
  .job-header {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #e2e8f0;
  }
  
  .job-header h2 {
    font-family: 'Montserrat', sans-serif;
    font-size: 28px;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 10px;
    transition: color 0.2s ease;
  }
  
  .job-details-card:hover .job-header h2 {
    color: #3182ce;
  }
  
  .company-name {
    font-size: 18px;
    font-weight: 500;
    color: #4a5568;
    display: flex;
    align-items: center;
  }
  
  .company-name::before {
    content: "\f1ad";
    font-family: FontAwesome;
    margin-right: 8px;
    color: #4299e1;
  }
  
  .job-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }
  
  .info-item {
    background-color: #f7fafc;
    padding: 14px 18px;
    border-radius: 8px;
    transition: all 0.25s ease;
  }
  
  .info-item:hover {
    background-color: #edf2f7;
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
  }
  
  .label {
    display: block;
    font-weight: 600;
    font-size: 14px;
    color: #4a5568;
    margin-bottom: 6px;
  }
  
  .value {
    font-size: 16px;
    color: #2d3748;
    display: flex;
    align-items: center;
  }
  
  .value i {
    margin-right: 8px;
    color: #4299e1;
  }
  
  .job-section {
    margin-bottom: 30px;
    padding: 20px;
    border-radius: 8px;
    transition: all 0.25s ease;
    background-color: #fff;
    border: 1px solid #e2e8f0;
  }
  
  .job-section:hover {
    border-color: #bee3f8;
    box-shadow: 0 4px 12px rgba(66, 153, 225, 0.15);
  }
  
  .job-section h3 {
    font-family: 'Montserrat', sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 15px;
    position: relative;
    padding-left: 16px;
  }
  
  .job-section h3::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 20px;
    background: linear-gradient(to bottom, #3182ce, #63b3ed);
    border-radius: 3px;
  }
  
  .section-content {
    font-size: 16px;
    line-height: 1.7;
    color: #4a5568;
  }
  
  .section-content p {
    margin-bottom: 10px;
  }
  
  .job-actions {
    display: flex;
    gap: 16px;
    margin-top: 30px;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    border-radius: 8px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 15px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .btn i {
    margin-right: 8px;
  }
  
  .apply-btn {
    background: linear-gradient(135deg, #3182ce, #4299e1);
    color: white;
    box-shadow: 0 4px 10px rgba(66, 153, 225, 0.25);
  }
  
  .apply-btn:hover {
    background: linear-gradient(135deg, #2b6cb0, #3182ce);
    transform: translateY(-3px);
    box-shadow: 0 6px 15px rgba(66, 153, 225, 0.35);
  }
  
  .already-applied-btn {
    background: linear-gradient(135deg, #38a169, #48bb78);
    color: white;
    box-shadow: 0 4px 10px rgba(56, 161, 105, 0.25);
    cursor: not-allowed;
    opacity: 0.9;
  }
  
  .back-btn {
    background-color: #e2e8f0;
    color: #4a5568;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }
  
  .back-btn:hover {
    background-color: #cbd5e0;
    transform: translateY(-3px);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
  }
  
  @media (max-width: 768px) {
    .job-details-card {
      padding: 20px;
    }
    
    .job-header h2 {
      font-size: 24px;
    }
    
    .job-actions {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
    }
  }
</style>

<%- include('../partials/footer') %>