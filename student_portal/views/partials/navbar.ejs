<nav class="navbar navbar-expand-lg navbar-dark bg-gradient shadow-sm py-1" style="background: linear-gradient(135deg, #007bff, #0056b3);">
  <div class="container">
    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <span class="logo-icon bg-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
        <i class="fa-solid fa-user text-primary" style="font-size: 1rem;"></i>
      </span>
      <span class="fs-6 fw-bold ms-2">Job Portal</span>
    </a>

    <!-- Mobile Toggle -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link <%= activePage === 'home' ? 'active fw-bold bg-light text-primary rounded px-2' : '' %>" href="/">
            <i class="fa fa-home"></i> Home
          </a>
        </li>
        <% if (currentUser) { %>
          <li class="nav-item">
            <a class="nav-link <%= activePage === 'jobs' ? 'active fw-bold bg-light text-primary rounded px-2' : '' %>" href="/jobs">
              <i class="fa fa-briefcase"></i> Jobs
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= activePage === 'applied' ? 'active fw-bold bg-light text-primary rounded px-2' : '' %>" href="/jobs/applied">
              <i class="fa fa-check-circle"></i> Applied
            </a>
          </li>
        <% } %>
      </ul>

      <!-- Search Bar -->
      <% if (currentUser) { %>
        <form class="d-flex mx-auto d-none d-md-flex" action="/jobs/search" method="GET">
          <div class="input-group input-group-sm rounded-pill overflow-hidden" style="width: 200px;">
            <input class="form-control border-0" type="search" name="q" placeholder="Search...">
            <button class="btn btn-light" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </form>
      <% } %>

      <!-- Right Side Links -->
      <ul class="navbar-nav ms-auto">
        <% if (!currentUser) { %>
          <li class="nav-item">
            <a class="nav-link <%= activePage === 'login' ? 'active fw-bold bg-light text-primary rounded px-2' : '' %>" href="/login">
              <i class="fa fa-sign-in-alt"></i> Login
            </a>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm ms-2" href="/register">
              <i class="fa fa-user-plus"></i> Register
            </a>
          </li>
        <% } else { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
              <% if (currentUser.profileImage) { %>
                <img src="<%= currentUser.profileImage %>" alt="Profile" class="rounded-circle me-1" width="25" height="25">
              <% } else { %>
                <i class="fa fa-user-circle"></i>
              <% } %>
              <span class="ms-1"><%= currentUser.name %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow">
              <li><a class="dropdown-item" href="/profile"><i class="fa fa-user me-2"></i>Profile</a></li>
              <li><a class="dropdown-item" href="/profile/complete"><i class="fa fa-edit me-2"></i>Edit</a></li>
              <% if (currentUser.isAdmin) { %>
                <li><a class="dropdown-item" href="/admin"><i class="fa fa-cog me-2"></i>Admin</a></li>
              <% } %>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/logout"><i class="fa fa-sign-out-alt me-2"></i>Logout</a></li>
            </ul>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
