<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="main-content">
  <div class="hero-section">
    <div class="container">
      <h1>Find Your Dream Job</h1>
      <p>Connect with top companies and apply for exciting opportunities</p>
      <div class="cta-buttons">
        <% if (!currentUser) { %>
          <a href="/login" class="btn btn-primary">Login</a>
          <a href="/register" class="btn btn-secondary">Register</a>
        <% } else { %>
          <a href="/jobs" class="btn btn-primary">Browse Jobs</a>
          <a href="/profile" class="btn btn-secondary">View Profile</a>
        <% } %>
      </div>
    </div>
  </div>

  <div class="features-section">
    <div class="container">
      <h2>Why Choose Our Job Portal?</h2>
      <div class="features">
        <div class="feature">
          <div class="feature-icon">
            <i class="fas fa-building"></i>
          </div>
          <h3>Top Companies</h3>
          <p>Connect with leading tech companies looking for talented professionals</p>
          <a href="/companies" class="feature-link">Explore Companies <i class="fas fa-arrow-right"></i></a>
        </div>
        <div class="feature">
          <div class="feature-icon">
            <i class="fas fa-paper-plane"></i>
          </div>
          <h3>Easy Application</h3>
          <p>Apply with just one click once your profile is complete</p>
          <a href="/how-it-works" class="feature-link">Learn More <i class="fas fa-arrow-right"></i></a>
        </div>
        <div class="feature">
          <div class="feature-icon">
            <i class="fas fa-user-tie"></i>
          </div>
          <h3>Profile Showcase</h3>
          <p>Highlight your skills, projects, and experience to stand out</p>
          <a href="/profile-tips" class="feature-link">Profile Tips <i class="fas fa-arrow-right"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<style>
/* Base Styles - Scoped to this page */
.main-content {
  flex: 1 0 auto;
}

/* Variables kept at root level but won't affect navbar */
:root {
  --primary-color: #3182ce;
  --primary-light: #63b3ed;
  --primary-dark: #2c5282;
  --secondary-color: #4a5568;
  --light-bg: #f8fafc;
  --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  --hover-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  --border-radius: 16px;
  --transition: all 0.3s ease;
}

/* Scoped body styles that won't affect navbar */
.main-content-wrapper {
  font-family: 'Poppins', sans-serif;
  color: #2d3748;
  background-color: #f8fafc;
  line-height: 1.6;
}

/* Hero Section with Enhancements - Properly scoped */
.main-content .hero-section {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  padding: 80px 0 120px;
  text-align: center;
  position: relative;
  border-radius: 0 0 60px 60px;
  box-shadow: var(--card-shadow);
  margin-bottom: 120px;
  overflow: hidden;
}

.main-content .hero-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
  z-index: 0;
}

.main-content .hero-section .container {
  position: relative;
  z-index: 2;
}

.main-content .hero-section h1 {
  font-family: 'Montserrat', sans-serif;
  font-size: 48px;
  font-weight: 800;
  margin-bottom: 20px;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  animation: fadeInUp 0.8s ease forwards;
}

.main-content .hero-section p {
  font-size: 20px;
  max-width: 600px;
  margin: 0 auto 40px;
  opacity: 0.9;
  animation: fadeInUp 0.8s ease 0.2s forwards;
  animation-fill-mode: both;
}

.main-content .cta-buttons {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 60px;
  animation: fadeInUp 0.8s ease 0.4s forwards;
  animation-fill-mode: both;
}

/* Button Styling - Scoped to main-content */
.main-content .btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-family: 'Montserrat', sans-serif;
  font-weight: 600;
  font-size: 16px;
  padding: 16px 32px;
  border: none;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.main-content .btn::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 0;
  background: rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  z-index: -1;
}

.main-content .btn:hover::after {
  height: 100%;
}

.main-content .btn-primary {
  background: white;
  color: var(--primary-color);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
}

.main-content .btn-primary:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

.main-content .btn-secondary {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.main-content .btn-secondary:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

/* Enhanced Features Section */
.main-content .features-section {
  padding: 80px 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.main-content .features-section h2 {
  font-family: 'Montserrat', sans-serif;
  font-size: 36px;
  font-weight: 700;
  text-align: center;
  margin-bottom: 70px;
  position: relative;
  padding-bottom: 20px;
  color: var(--secondary-color);
}

.main-content .features-section h2:after {
  content: "";
  position: absolute;
  width: 100px;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 2px;
}

.main-content .features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 40px;
}

/* Enhanced Feature Cards */
.main-content .feature {
  background: white;
  border-radius: var(--border-radius);
  box-shadow: var(--card-shadow);
  padding: 40px 30px;
  text-align: center;
  transition: var(--transition);
  position: relative;
  border-bottom: 5px solid var(--primary-color);
  overflow: hidden;
  z-index: 1;
}

.main-content .feature::before {
  content: '';
  position: absolute;
  top: -10px;
  right: -10px;
  width: 120px;
  height: 120px;
  background: linear-gradient(135deg, rgba(49, 130, 206, 0.1), rgba(99, 179, 237, 0.1));
  border-radius: 50%;
  z-index: -1;
}

.main-content .feature:hover {
  transform: translateY(-15px);
  box-shadow: var(--hover-shadow);
}

.main-content .feature-icon {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  background: linear-gradient(135deg, #ebf8ff, #bee3f8);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 25px;
  box-shadow: 0 10px 20px rgba(66, 153, 225, 0.2);
  transition: var(--transition);
}

.main-content .feature:hover .feature-icon {
  transform: scale(1.1);
  box-shadow: 0 15px 25px rgba(66, 153, 225, 0.3);
}

.main-content .feature-icon i {
  font-size: 36px;
  color: var(--primary-color);
}

.main-content .feature h3 {
  font-family: 'Montserrat', sans-serif;
  font-size: 24px;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 20px;
  position: relative;
  padding-bottom: 15px;
}

.main-content .feature h3::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 50px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary-light), var(--primary-color));
  border-radius: 3px;
}

.main-content .feature p {
  color: var(--secondary-color);
  margin-bottom: 25px;
  font-size: 16px;
}

.main-content .feature-link {
  display: inline-block;
  color: var(--primary-color);
  font-weight: 600;
  text-decoration: none;
  position: relative;
  padding-bottom: 5px;
  transition: var(--transition);
}

.main-content .feature-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--primary-color);
  transition: var(--transition);
}

.main-content .feature-link:hover {
  color: var(--primary-dark);
}

.main-content .feature-link:hover::after {
  width: 100%;
}

.main-content .feature-link i {
  font-size: 12px;
  margin-left: 5px;
  transition: var(--transition);
}

.main-content .feature-link:hover i {
  transform: translateX(5px);
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Container Basic - Scoped to main-content */
.main-content .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Responsive Adjustments */
@media (max-width: 992px) {
  .main-content .hero-section {
    padding: 60px 0 100px;
  }
  
  .main-content .hero-section h1 {
    font-size: 36px;
  }
}

@media (max-width: 768px) {
  .main-content .hero-section {
    padding: 50px 0 80px;
    margin-bottom: 100px;
  }
  
  .main-content .hero-section h1 {
    font-size: 28px;
  }
  
  .main-content .hero-section p {
    font-size: 16px;
  }
  
  .main-content .cta-buttons {
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }
  
  .main-content .btn {
    width: 100%;
    max-width: 300px;
  }
  
  .main-content .feature-icon {
    width: 70px;
    height: 70px;
  }
  
  .main-content .feature-icon i {
    font-size: 28px;
  }
}

@media (max-width: 576px) {
  .main-content .container {
    padding: 0 15px;
  }
  
  .main-content .hero-section {
    border-radius: 0 0 30px 30px;
  }
  
  .main-content .features {
    grid-template-columns: 1fr;
  }
}
</style>