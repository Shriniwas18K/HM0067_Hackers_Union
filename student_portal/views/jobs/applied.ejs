<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
  <h2>Your Applied Jobs</h2>
  
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success">
      <%= success %>
    </div>
  <% } %>
  
  <div class="applied-jobs">
    <% if (appliedJobs && appliedJobs.length > 0) { %>
      <% appliedJobs.forEach(job => { %>
        <div class="job-card">
          <div class="job-header">
            <h3 class="job-title"><%= job.title %></h3>
            <div class="job-company"><%= job.company %></div>
          </div>
          
          <div class="job-details">
            <div class="job-location">
              <i class="fa fa-map-marker"></i> <%= job.location %>
            </div>
            
            <div class="job-salary">
              <i class="fa fa-money"></i> <%= job.salary %>
            </div>
            
            <div class="job-applied">
              <i class="fa fa-check-circle"></i> Applied
            </div>
          </div>
          
          <div class="job-description">
            <%= job.description.substring(0, 150) + (job.description.length > 150 ? '...' : '') %>
          </div>
          
          <div class="job-actions">
            <a href="/jobs/<%= job.id %>" class="btn btn-info">View Details</a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="no-jobs">
        <p>You haven't applied to any jobs yet.</p>
        <a href="/jobs" class="btn btn-primary">Browse Jobs</a>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>